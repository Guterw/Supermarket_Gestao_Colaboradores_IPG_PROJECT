@model Hierarquias.Models.Funcionarios

@{
    ViewData["Title"] = "Subordinados";
}

<h2>Lista de Subordinados</h2>

<form asp-action="ListarSubordinados" method="post">
    <div class="form-group">
        <label asp-for="Id">Selecione um Funcionário:</label>
        <select asp-for="Id" class="form-control" asp-items="ViewBag.Funcionarios"></select>
    </div>
    <p></p>
    <button type="submit" class="btn btn-primary">Listar Subordinados</button>
</form>

<p></p>

<!-- Aqui você exibirá a lista de subordinados após a seleção -->
<ul id="listaSubordinados"></ul>
