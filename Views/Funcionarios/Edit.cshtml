@model Hierarquias.Models.Funcionarios

<h2>Edit Funcionário: @Model.Nome</h2>

<form asp-action="Edit" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Superiores"></label>
        @foreach (var funcionario in ViewBag.TodosOsFuncionarios)
        {
            <div class="form-check">
                <input type="checkbox" name="Superiores" value="@funcionario.Id" class="form-check-input"
                @(ViewBag.SuperioresSelecionados.Contains(funcionario.Id) ? "checked" : "") />
                <label class="form-check-label">@funcionario.Nome</label>
            </div>
        }



        <span asp-validation-for="Superiores" class="text-danger"></span>
    </div>

    <p></p>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-danger">Cancelar</a>
</form>

