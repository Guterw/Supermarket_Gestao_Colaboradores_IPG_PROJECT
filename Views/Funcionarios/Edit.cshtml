@model Hierarquias.Models.Funcionarios

@{
    ViewData["Title"] = "Editar Funcionario";
}

<h2>Editar Funcionário</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sobrenome"></label>
        <input asp-for="Sobrenome" class="form-control" />
        <span asp-validation-for="Sobrenome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CargoId"></label>
        <select asp-for="CargoId" class="form-control" asp-items="ViewBag.Cargos"></select>
        <span asp-validation-for="CargoId" class="text-danger"></span>
    </div>
    <p></p>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-danger">Cancelar</a>
</form>